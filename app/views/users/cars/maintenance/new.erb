<a href="/users/<%= @user.slug %>">Home</a>


<h1>Log Maintenance</h1>

<form method="POST" action="/users/<%= @user.slug %>/cars/<%= @car.id %>/maintenance">
  <h2>Log from existing</h2>

  <label>Task</label>
    <select name="maintenance[][name]">
      <option label=" "></option>
      <% Maintenance.select_user_maintenance(@user).each do |task| %>
        <option> <%= task %> </option>
      <% end %>
    </select>
  <label>Performed on Date:</label>
    <input type="text" class="datepicker" name="maintenance[][date]">
  <label>Performed at Miles:</label>
    <input type="text" name="maintenance[][miles]">
  
  <h2>And/Or create a new log</h2>

  <label>Task:</label>
    <input type="text" name="maintenance[][name]">
  <label>Performed on Date:</label>
    <input type="text" class="datepicker" name="maintenance[][date]">
  <label>Performed at Miles:</label>
    <input type="text" name="maintenance[][miles]">

  <p><input type="submit" value="Log Maintenance"></p>
</form>

