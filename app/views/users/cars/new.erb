<h1>Add Car</h1>

<form method="POST" action="/users/:slug/cars">
  <label>Make</label>
    <input type="text" name="make">
  <label>Model</label>
    <input type="text" name="model">
  <label>Color</label>
    <input type="text" name="color">
  <label>Transmission</label>
    <select name="transmission">
      <option>Manual</option>
      <option>Automatic</option>
    </select>
  <label>Year</label>
    <select name="year">
     <% i = 1900 %>
     <% while i <= 2016 %>
       <option <%='selected' if i == 2016%>> <%=i%> </option>
      <% i += 1 %>
      <% end %>
    </select>
  <label>Miles</label>
    <input type="text" name="make">
  <input type="submit" value="Add Car" id="create">
</form>
