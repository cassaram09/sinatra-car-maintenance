<a href="/users/<%= @user.slug %>">Home</a>

<p><a href="/users/<%=@user.slug%>/cars/<%=@car.id%>/edit">Edit This Car</a></p>

<p>Make: <%= @car.make %></p>
<p>Model: <%= @car.car_model %></p>
<p>Color: <%= @car.color %></p>
<p>Transmission: <%= @car.transmission %></p>
<p>Year: <%= @car.year %></p>
<p>Miles: <%= @car.miles %></p>


<a href="/users/<%=@user.slug%>/cars/<%=@car.id%>/maintenance/new">Log Maintenance</a>


<% @car.maintenances.reverse.each do |maintenance| %>

  <p>ID #<%= maintenance.id %> - <%= maintenance.name %> peformed on <%= maintenance.date %> at <%= maintenance.miles %> miles 

  <a href="/users/<%=@user.slug%>/cars/<%=@car.id%>/maintenance/<%= maintenance.id %>">Edit Log</a> </p>

<%end%>